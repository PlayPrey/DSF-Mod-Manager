<Window x:Class="DsfMm.Frontend.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DsfMm.Frontend"
        mc:Ignorable="d"
        Title="ConsoleWindow" Height="600" Width="500">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" CornerRadius="2,2,2,2" Margin="10,10,10,30">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF272727"/>
                    <GradientStop Color="#FF1B1B1B" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer Name="scrollviewer">
                <TextBlock x:Name="tbLog" Text="" Foreground="White" FontFamily="Segoe UI Light" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
        <Button Content="Save Log" Margin="0,0,10,5" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="117"/>

    </Grid>
</Window>
